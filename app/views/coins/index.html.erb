<p id="notice"><%= notice %></p>

<h1>Coins</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imgagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.desc %></td>
        <td><%= coin.acro %></td>
        <td><%=image_tag coin.img_ulr,width:25, height:25 %></td>
        <td><%= link_to t("links.show"), coin %></td>
        <td><%= link_to t("links.editar"), edit_coin_path(coin) %></td>
        <td><%= link_to t("links.deletar"), coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coin', new_coin_path %>
